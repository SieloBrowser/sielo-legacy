clone_depth: 10
shallow_clone: true

environment:
    matrix:
    - PLATFORM: amd64

install:
    - call "C:\Program Files (x86)\Microsoft Visual Studio\2017\Community\VC\Auxiliary\Build\vcvars64.bat"

before_build:
    - mkdir build
	- cd build

build_script:
    - cmake -G "NMake Makefiles" ../
    - cmake --build build

artifacts:
  - path: build
